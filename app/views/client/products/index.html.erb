<h1 class="mt-3">PRODUCTS PRODUCTS PRODUCTS</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-4 mt-3">
      <div class="card">
        <img src="<%=product["image_url"]%>" class="car-img-top" alt="<%= product["name"]%>" width="300">
        <div class="card-body">
          <h5 class="card-title"> <%= product["name"] %> </h5>
          <p class="card-text"><%= product["price"] %></p>
          <p class="card-text"><%= product["description"] %></p>

          <a href="/client/products/<%= product["id"] %>" class="btn btn-primary mt-3">CHECK IT OUT</a>
        </div>
      </div>
    </div>
  <% end %>
</div>

